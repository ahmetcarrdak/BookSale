@model List<BookSale.Models.CustomerModel>

<div class="page-header min-height-300 border-radius-xl mt-4"
     style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
    <span class="mask  bg-gradient-primary  opacity-6"></span>
</div>
<div class="card card-body mx-3 mx-md-4 mt-n6">

    @foreach (var customer in Model)
    {
        <form onsubmit="return false" id="profileUpdate">
            <div class="row">
                <div class="col-12">
                    <div class="card card-plain h-100">
                        <div class="card-header pb-0 p-3">
                            <h6 class="mb-0">Platform Settings</h6>
                        </div>
                        <div class="card-body p-3">
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Account</h6>

                            <div class="form-group form-switch ps-0">
                                <input class="form-control ms-auto" type="text" id="" value="@customer.Name">
                            </div>

                            <div class="form-group form-switch ps-0">
                                <input class="form-control ms-auto" type="text" id="" value="@customer.phone">
                            </div>

                            <div class="form-group form-switch ps-0">
                                <input class="form-control ms-auto" type="text" id="" value="@customer.Mail">
                            </div>

                            <div class="form-group form-switch ps-0">
                                <button class="btn btn-success">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        </form>
    }

</div>