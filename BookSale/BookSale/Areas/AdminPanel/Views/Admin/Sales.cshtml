@model List<BookSale.Models.SaleModel>

@if (Model == null || !Model.Any())
{
    <p class="text-center text-muted mt-3">No sales found.</p>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Sales Table</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Book ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Customer Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Member Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Customer Phone</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Piece</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sale in Model)
                                {
                                    <tr>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@sale.Id</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@sale.Book.Title</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@sale.Customer.Name</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@sale.Name</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@sale.Phone</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">@sale.Piece</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">@sale.Status</p>
                                        </td>
                                        <td class="align-middle">
                                            <a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit sale">
                                                Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
